<CameraScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Camera:
            id: camera
            resolution: (640, 480)
            play: False
            size_hint_y: 0.80
            opacity: 0
        Button:
            id: start
            text: 'Start Camera'
            size_hint_y: 0.10
            on_press: root.start() if root.ids.camera.play == False else root.stop()


        Button:
            text: 'Capture'
            size_hint_y: 0.10
            on_press: root.capture()


<ImageScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Image:
            id: img
            size_hint_y: 0.7
        Button:
            text: 'Create Sharable Link'
            size_hint_y: 0.1
            on_press : root.create_link()
        Label:
            id: link
            text: ''
            size_hint_y: 0.1
        GridLayout:
            cols: 2
            size_hint_y: 0.1
            padding: 10
            spacing: 10
            Button:
                text: 'Copy Link'
                on_press: root.copy_link()
            Button:
                text: 'Open Link'
                on_press: root.open_link()





<RootWidget>:
    canvas.before:
        Color:
            rgba: (0.9, 0.9, 0.9, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'

    ImageScreen:
        id: image_screen
        name: 'image_screen'