<CameraScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Camera:
            id: camera
            resolution: (640, 480)
            play: False
            size_hint_y: 0.80
        Button:
            id: start
            text: 'Start Camera'
            size_hint_y: 0.10
            on_press: root.start() if root.ids.camera.play == False else root.stop()

        Button:
            text: 'Capture'
            size_hint_y: 0.10
            on_press: root.capture()


<ImageScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Image:
            id: img
            size_hint_y: 0.8
        Button:
            text: 'Create Sharable Link'
            size_hint_y: 0.2
            on_press : root.create_link()
        Label:
            id: link
            text: ''
        GridLayout:
            cols: 2
            padding: 10
            spacing: 10
            Button:
                text: 'Copy Link'
                size_hint_y: 0.1
                on_press: root.copy_link()
            Button:
                text: 'Open Link'
                size_hint_y: 0.1





<RootWidget>:
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'

    ImageScreen:
        id: image_screen
        name: 'image_screen'