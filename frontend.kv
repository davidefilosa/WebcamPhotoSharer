<CameraScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Camera:
            id: camera
            resolution: (640, 480)
            play: False
            size_hint_y: 0.80
        Button:
            id: start
            text: 'Start Camera'
            size_hint_y: 0.10
            on_press: root.start() if root.ids.camera.play == False else root.stop()

        Button:
            text: 'Capture'
            size_hint_y: 0.10
            on_press: root.capture()


<RootWidget>:
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'